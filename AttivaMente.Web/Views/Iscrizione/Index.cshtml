@using AttivaMente.Core.Models
@model List<Iscrizione>

@{
    var years = ViewBag.Years;
    int selectedYear = ViewBag.SelectedYear;
    string isSoloIscritti = ViewBag.IsSoloIscritti;
}

<h2>Iscrizioni - @selectedYear</h2>

<form method="get" asp-action="Index" class="mb-3 d-flex align-items-center gap-3 flex-wrap">
    <div class="d-flex align-items-center gap-2">
        <label class="form-label mb-0">Anno:</label>
        <select name="anno" class="form-select w-auto" onchange="this.form.submit()">
            @foreach (var year in years)
            {
                <option value="@year" selected="@(year==selectedYear)">@year</option>
            }
        </select>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="isSoloIscritti" value="true"
                   checked="@(isSoloIscritti == "true")" onchange="this.form.submit()" />
            <label class="form-check-label">Solo Iscritti</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="isSoloIscritti" value="false"
                   checked="@(isSoloIscritti != "true")" onchange="this.form.submit()" />
            <label class="form-check-label">Tutti</label>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Tipo</th>
            <th>Data Iscrizione</th>
            <th>AZIONI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var iscrizione in Model)
        {
            <tr>
                <td>@iscrizione.Utente!.Cognome</td>
                <td>@iscrizione.Utente!.Nome</td>
                <td>@iscrizione.Utente!.Email</td>
                <td>@iscrizione.Tipo</td>
                <td>@iscrizione.DataIscrizione</td>
                <td>
                    @if (iscrizione.DataIscrizione.Year < selectedYear){
                        <form method="post" asp-action="Renew">
                            <input type="hidden" name="utenteId" value="@iscrizione.UtenteId" />
                            <input type="hidden" name="anno" value="@selectedYear" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Rinnova</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="Subscribe">
                            <input type="hidden" name="utenteId" value="@iscrizione.UtenteId" />
                            <input type="hidden" name="anno" value="@selectedYear" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Iscrivi</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
