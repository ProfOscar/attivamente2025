@using AttivaMente.Core.Models
@model List<Utente>

<h2>Utenti registrati</h2>

<div class="d-flex gap-2 align-items-start flex-wrap mb-3">
    <a class="btn btn-primary" asp-action="Create">Aggiungi</a>
    <a class="btn btn-primary" asp-action="CreateXlsx"
       asp-route-searchTerm="@ViewBag.SearchTerm"
       asp-route-ruoloFilter="@ViewBag.RuoloFilter"
       asp-route-orderBy="@ViewBag.OrderBy"
       asp-route-direction="@ViewBag.Direction">
        Scarica XLSX
    </a>
    <form method="get" asp-action="Index" class="d-flex ms-auto">
        <select name="ruoloFilter" class="form-select me-3">
            <option value="0">Tutti i ruoli</option>
            @foreach (var item in (SelectList)ViewBag.RuoliSelectList)
            {
                var isSelected = ViewBag.RuoloFilter == int.Parse(@item.Value);
                <option value="@item.Value" selected="@isSelected">
                    @item.Text
                </option>
            }
        </select>
        <input type="text" name="searchTerm" class="form-control me-2"
               placeholder="Cerca per Nome, Cognome, eMail..." value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-primary">Cerca</button>
    </form>
</div>

@{
    string orderBy = (ViewBag.OrderBy ?? "cognome").ToLower();
    string direction = (ViewBag.Direction ?? "asc").ToLower();
    string nextDir = (direction == "asc") ? "desc" : "asc";
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-orderBy="id"
                   asp-route-direction="@(orderBy == "id" ? nextDir : "asc")"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-ruoloFilter="@ViewBag.RuoloFilter">
                    ID @(orderBy == "id" ? (direction == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-orderBy="cognome"
                   asp-route-direction="@(orderBy == "cognome" ? nextDir : "asc")"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-ruoloFilter="@ViewBag.RuoloFilter">
                    Cognome @(orderBy == "cognome" ? (direction == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-orderBy="nome"
                   asp-route-direction="@(orderBy == "nome" ? nextDir : "asc")"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-ruoloFilter="@ViewBag.RuoloFilter">
                    Nome @(orderBy == "nome" ? (direction == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-orderBy="email"
                   asp-route-direction="@(orderBy == "email" ? nextDir : "asc")"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-ruoloFilter="@ViewBag.RuoloFilter">
                    eMail @(orderBy == "email" ? (direction == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-orderBy="ruolo"
                   asp-route-direction="@(orderBy == "ruolo" ? nextDir : "asc")"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-ruoloFilter="@ViewBag.RuoloFilter">
                    Ruolo @(orderBy == "ruolo" ? (direction == "asc" ? "↑" : "↓") : "")
                </a>
            </th>
            <th style="color: var(--bs-link-color);">Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var utente in Model)
        {
            <tr>
                <td>@utente.Id</td>
                <td>@utente.Cognome</td>
                <td>@utente.Nome</td>
                <td>@utente.Email</td>
                <td>@utente.Ruolo?.Nome</td>
                <td>
                    <a asp-action="Details" asp-route-id="@utente.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@utente.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@utente.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@{
    int pageNumber = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
}
<nav aria-label="Navigazione pagine utenti" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(pageNumber - 1)"
               asp-route-searchTerm="@ViewBag.SearchTerm"
               asp-route-ruoloFilter="@ViewBag.RuoloFilter"
               asp-route-orderBy="@ViewBag.OrderBy"
               asp-route-direction="@ViewBag.Direction">
                « Precedente
            </a>
        </li>

        <li class="page-item disabled">
            <span class="page-link">
                Pagina @pageNumber di @totalPages
            </span>
        </li>

        <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(pageNumber + 1)"
               asp-route-searchTerm="@ViewBag.SearchTerm"
               asp-route-ruoloFilter="@ViewBag.RuoloFilter"
               asp-route-orderBy="@ViewBag.OrderBy"
               asp-route-direction="@ViewBag.Direction">
                Successiva »
            </a>
        </li>
    </ul>
</nav>