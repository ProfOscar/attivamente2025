@using AttivaMente.Core.Models
@model List<Utente>

<h2>Utenti registrati</h2>

<div class="d-flex gap-2 align-items-start flex-wrap mb-3">
	<a class="btn btn-primary" asp-action="Create">Aggiungi</a>
	<a class="btn btn-primary" asp-action="CreateXlsx">Scarica XLSX</a>
	<form method="get" asp-action="Index" class="d-flex ms-auto">
		<input type="text" name="searchTerm" class="form-control me-2"
			   placeholder="Cerca per Nome, Cognome, eMail..." value="@ViewBag.SearchTerm" />
		<button type="submit" class="btn btn-primary">Cerca</button>
	</form>
</div>


<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nome</th>
			<th>Cognome</th>
			<th>Email</th>
			<th>Ruolo</th>
			<th>Azioni</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var utente in Model)
		{
			<tr>
				<td>@utente.Id</td>
				<td>@utente.Nome</td>
				<td>@utente.Cognome</td>
				<td>@utente.Email</td>
				<td>@utente.Ruolo?.Nome</td>
				<td>
					<a asp-action="Details" asp-route-id="@utente.Id" class="btn btn-info btn-sm">Dettagli</a>
					<a asp-action="Edit" asp-route-id="@utente.Id" class="btn btn-warning btn-sm">Modifica</a>
					<a asp-action="Delete" asp-route-id="@utente.Id" class="btn btn-danger btn-sm">Elimina</a>
				</td>
			</tr>
		}
	</tbody>
</table>